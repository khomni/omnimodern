if image
  - let path = (imageable && imageable.path || '')
  .preview-image-container(data-kind="Image" data-ref=image.id)
    a(href= path + '/images/' + image.id data-click="modal" data-target="image-"+image.id)
      img.preview-image(src=image.path)
    if currentUser
      .preview-image-overlay.flex.distribute.pad
        a.close(href=path + '/images/' + image.id + '/edit' data-click="modal"): i.fa.fa-wrench
        form(action=path +  '/images/' + image.id method="delete" data-response="json" data-reaction="remove")
          button.close(title="Delete Photo"): i.fa.fa-trash
